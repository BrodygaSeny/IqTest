
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:layout_height="match_parent"
            android:shape="oval">
            <gradient
                android:angle="135"
                android:centerColor="@color/blue"
                android:endColor="@color/blue_dark"
