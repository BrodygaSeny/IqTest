<resources>
    <attr format="color" name="bgColor"/>
    <attr name="colorButtonAccess" format="color" />
    <attr name="textColorButtonAccess" format="color" />
    <attr name="colorMainQuestion" format="color" />
    <attr name="textColorMainQuestion" format="color" />
    <attr name="textColorRadioButton" format="color" />
    <attr name="toast_background_color" format="color" />
    <attr name="toast_text_color" format="color" />



    <!-- Base application theme -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/white_ultra</item>
        <item name="colorButtonAccess">@color/green</item>
        <item name="textColorButtonAccess">@color/black</item>
        <item name="textColorMainQuestion">@color/white_ultra</item>
        <item name="colorMainQuestion">@color/blue_light</item>
        <item name="textColorRadioButton">@color/black</item>
        <item name="toast_background_color">@color/gray_dark</item>
        <item name="toast_text_color">@color/white</item>
    </style>



    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <item name="android:windowBackground">@color/gray_dark</item>
        <item name="android:textColor">@color/white_for_dark</item>
        <item name="android:textColorPrimary">@color/white_for_dark</item>

        <item name="colorButtonAccess">@color/green_dark</item>
        <item name="textColorButtonAccess">@color/white_for_dark</item>
        <item name="textColorMainQuestion">@color/white_for_dark</item>
        <item name="colorMainQuestion">@color/blue</item>
        <item name="textColorRadioButton">@color/white_for_dark</item>
        <item name="android:buttonTint">@color/white_for_dark</item>
        <item name="toast_background_color">@color/white_for_dark</item>
        <item name="toast_text_color">@color/black</item>

    </style>



    <style name="AppThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme end -->



    <!--    styles     -->
    <style name="commonText">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/commonTextSize</item>
    </style>

    <style name="commonTextCenter" parent="commonText">
        <item name="android:gravity">center</item>
       <item name="android:textAlignment">center</item>
    </style>

    <style name="buttonAccess">
        <item name="android:background">?attr/colorButtonAccess</item>
        <item name="android:textColor">?attr/textColorButtonAccess</item>
        <item name="paddingEnd">12dp</item>
        <item name="paddingStart">12dp</item>
    </style>

    <style name="button_motivate">
        <item name="android:background">@color/blue</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="radioButton">
        <item name="android:paddingTop">@dimen/radioButtonPadding</item>
        <item name="android:paddingBottom">@dimen/radioButtonPadding</item>
        <item name="android:textColor">?attr/textColorRadioButton</item>
    </style>

    <style name="user_status">
        <item name="android:textStyle">italic|bold</item>
    </style>


    <style name="main_question">
        <item name="android:textColor">?attr/textColorMainQuestion</item>
        <item name="android:background">?attr/colorMainQuestion</item>
    </style>





    <!--    styles end -->


</resources>